<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF3E0">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ONE PLAYER"
        android:id="@+id/b1"
        android:clickable="false"
        android:background="#FFA726"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="TWO PLAYER"
        android:id="@+id/b2"
        android:background="#FFA726"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/b1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RGsinglePlayer"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:visibility="invisible">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textSize="20dp"
            android:id="@+id/easyRBtn"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Difficult"
            android:textSize="20dp"
            android:id="@+id/difficultRBtn"/>
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RGtwoPlayer"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:visibility="visible">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Single Device"
            android:textSize="20dp"
            android:id="@+id/singleRBtn"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Two Devices"
            android:textSize="20dp"
            android:id="@+id/doubleRBtn"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:background="#FFA726"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/play"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play"
        android:layout_marginTop="54dp"
        android:text="HighScores"
        android:background="#FFA726"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:visibility="invisible"
        android:id="@+id/highScores"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:id="@+id/b3"
        android:textColor="#ffffff"
        android:background="#FFA726"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
